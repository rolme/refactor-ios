# platform :ios, '13.2'
target 'refactor-ios' do
    use_frameworks!

    pod 'amplify-tools'

    # Initial setup for Amplify
    pod 'Amplify'
    pod 'AWSPluginsCore'
    pod 'AmplifyPlugins/AWSAPIPlugin'

    # Required for Cognito authentication
    pod 'AWSMobileClient'
    pod 'AWSAuthUI'
    pod 'AWSUserPoolsSignIn'

    pod 'AWSAppSync', '~> 3.0.0'
    pod 'Firebase/Analytics'
end
